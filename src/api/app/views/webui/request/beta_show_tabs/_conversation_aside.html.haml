.col-md-4.order-md-2.order-sm-1.mb-4#side-links
  -# REVIEWERS
  - if accepted_reviews.present? || declined_reviews.present? || open_reviews.present?
    .d-flex.justify-content-between
      %h4
        Reviews
      = render AddReviewDropdownComponent.new(bs_request: bs_request, user: User.session,
                                              can_add_reviews: can_add_reviews,
                                              my_open_reviews: my_open_reviews)
    = render AddReviewCollapsibleComponent.new
    .mb-4
      = render partial: 'webui/request/beta_show_tabs/review_summary', collection: accepted_reviews, as: :review
      = render partial: 'webui/request/beta_show_tabs/review_summary', collection: declined_reviews, as: :review
      = render partial: 'webui/request/beta_show_tabs/review_summary', collection: open_reviews, as: :review

  - if can_add_reviews
    = link_to('#', data: { toggle: 'modal', target: '#add-reviewer-modal' }, title: 'Add a Review') do
      %i.fas.fa-plus-circle.fa-lg.mr-1
      %span.nav-item-name Add a Review
    = render partial: 'add_reviewer_dialog'

  - open_reviews_for_staging_projects.each do |review|
    .pl-3
      %i.fas.fa-info-circle.text-info
      - staging_project = review.project
      Is staged in
      = link_to(review.by_project, staging_workflow_staging_project_path(staging_project.staging_workflow.project, staging_project.name))

  -# PACKAGE MAINTAINERS
  - unless package_maintainers.empty?
    .mt-5
      %h4
        Package Maintainers
      %p
        - package_size_limit = 5
        - if package_maintainers.size <= package_size_limit
          - package_maintainers.pluck(:login).each do |package_maintainer|
            .pl-3
              = user_with_realname_and_icon(package_maintainer, short: true)
        - else
          - package_maintainers.take(package_size_limit).pluck(:login).each do |package_maintainer|
            .pl-3
              = user_with_realname_and_icon(package_maintainer, short: true)
          %p.mt-3
            = link_to('Show all', '#', class: 'btn btn-outline-secondary show_dialog',
                      data: { toggle: 'modal', target: '#show-maintainers-modal' })
            = render partial: 'webui/request/show_package_maintainers', locals: { package_maintainers: package_maintainers }

  -# PROJECT MAINTAINERS
  - unless project_maintainers.empty?
    .mt-5
      %h4
        Project Maintainers
      %p
        - project_size_limit = 5
        - if project_maintainers.size <= project_size_limit
          - project_maintainers.pluck(:login).each do |project_maintainer|
            .pl-3
              = user_with_realname_and_icon(project_maintainer, short: true)
        - else
          - project_maintainers.take(project_size_limit).pluck(:login).each do |project_maintainer|
            .pl-3
              = user_with_realname_and_icon(project_maintainer, short: true)
          %p.mt-3
            = link_to('Show all', '#', class: 'btn btn-outline-secondary show_dialog',
                      data: { toggle: 'modal', target: '#show-project-maintainers-modal' })
            = render partial: 'webui/request/show_project_maintainers', locals: { project_maintainers: project_maintainers }

      - if policy(bs_request).handle_request? && show_project_maintainer_hint
        .alert.alert-warning
          You are a <strong>project maintainer</strong> but not a <strong>package maintainer</strong>. This package
          has <strong>#{pluralize(package_maintainers.size, 'package maintainer')}</strong> assigned. Please keep
          in mind that also package maintainers would like to review this request.
