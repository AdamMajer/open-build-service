= form_tag(token_workflow_runs_path(token_id), method: :get, class: 'd-flex px-3 py-2') do
  .col-3
    = label_tag text.parameterize.underscore, "#{text}:", class: css_for_label
  .col-9.d-flex
    = text_field_tag(text.parameterize.underscore, '', class: css_for_input, placeholder: placeholder, value: selected_input_filter)
    = button_tag(text.parameterize.underscore, type: 'submit', title: 'Filter!', class: css_for_button) do
      %i.fas.fa-magnifying-glass
