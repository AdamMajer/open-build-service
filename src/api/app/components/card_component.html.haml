.card
  .card-header.d-flex.justify-content-between
    %div
      = header
    - if delete_button?
      .ms-4
        = delete_button
  .card-body{ class: @extra_classes_for_body }
    = content
    - if actions?
      %ul.nav.justify-content-end.mt-auto
        - actions.each do |action|
          %li.nav-item
            = action
