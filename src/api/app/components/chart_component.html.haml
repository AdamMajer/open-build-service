- chart_data = build_results_chart_data
- if !chart_data.nil?
  .m-4
    %h4
      Build results summary
    %div
      = column_chart( chart_data,
                      width: '100%',
                      height: '300px',
                      stacked: true,
                      responsive: true,
                      colors: ['#008000', '#DC3545', '#FFCC00', '#EEEEEE'],
                      library: { scales: { y: { ticks: { stepSize: 1 }}}},
                    )
